<div class="row d-flex justify-content-center d-flex justify-content-center">
     <div class="col-sm-12">
          <h2>{{userData.title}}</h2>
          <p>by: {{userData.user.username}}</p>
     </div>
</div>
<div class="row d-flex justify-content-center">
     <div class="col-sm-12">
          <p> On: {{format_date userData.created_at}} </p>
     </div>
</div>
<div class="row d-flex justify-content-left">
     <div class="col-sm-12">
          <p>{{userData.content}}</p>
     </div>
</div>
<div class="row d-flex justify-content-center">
    {{!-- TODO FIX WEIRDNESS HERE WITH COMMENT INPUT --}}
     <div class="input-group col-sm-8">
         <div class="input-group-prepend">
    <span class="input-group-text">With textarea</span>
  </div>
  <textarea class="form-control" aria-label="With textarea"></textarea>
</div>
          <input placeholder="Comment" id="new-comment-post" name="comment-input" type="text">
     </div>
     <div class="col-sm-3">
          <button class="btn btn-warning" id="new-comment-btn" value="{{userData.id}}">
               <i class="material-icons left">question_answer</i> Comment
          </button>
     </div>
</div>
<div class="row d-flex justify-content-center">
     {{#each userData.comments}}
     <div class="col-sm-6">
      <div class="card">
        <div class="card-body">
          <h5 class="card-text">{{comment_text}}</h5>
            <p class="card-text">
              By
              {{user.username}}
              on
              {{format_date created_at}}
            </p>
            <a href="/posts/{{id}}">Curious minds inquire within</a>
                    </div>
               </div>
          </div>
     </div>
     {{/each}}
</div>

<script src="/javascript/comments.js"></script>