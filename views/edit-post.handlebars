<div class="row d-flex justify-content-center">
     <div class="col-sm-12">
          <h2>Edit Blog Entry: </h2>
     </div>
</div>
<div class="row d-flex justify-content-center">
     <div class="col-sm-12">
          <p>Blog Title: </p>
     </div>
     <div class="col-sm-12">
          <input id="blog-title" name="blog-title" type="text" value="{{title}}">
     </div>
</div>
<div class="row d-flex justify-content-center">
     <div class="col-sm-12">
          <p>Blog Entry: </p>
     </div>
     <div class="col-sm-12">
          <textarea id="post-text" name="post-text" class="materialize-textarea">{{post_content}}</textarea>
     </div>
</div>
<div class="row">
     <div class="col-sm-3">
          <button class="btn btn-warning" id="edit-post-button" value={{id}}>
               <i class="material-icons left">done</i>Submit Blog
          </button>
     </div>
</div>


<script src="/javascript/edit-post.js"></script>